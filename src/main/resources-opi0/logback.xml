<!DOCTYPE configuration>
<configuration debug="false" scan="true" scanPeriod="30 seconds">
	<property name="LOG_PATH" value="/home/andold/logs/contact" />
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-32.32logger{32} :%4line %msg%n</Pattern>
		</encoder>
	</appender>
	<appender name="general" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_PATH}/general.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/general.log.%i</fileNamePattern>
			<maxIndex>9</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>4MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-64.64logger{64} :%4line %msg%n</Pattern>
		</encoder>
	</appender>
	<appender name="contact" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_PATH}/contact.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/contact.log.%i</fileNamePattern>
			<maxIndex>9</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>4MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-32.32logger{32} :%4line %msg%n</Pattern>
		</encoder>
	</appender>
	<appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<File>${LOG_PATH}/error.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/error.log.%i</fileNamePattern>
			<maxIndex>9</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>4MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-32.32logger{32} :%4line %msg%n</Pattern>
		</encoder>
	</appender>

	<logger name="kr.andold.contact" additivity="false" value="info">
		<appender-ref ref="contact" />
		<appender-ref ref="error" />
	</logger>

	<logger name="org.springframework" additivity="false" value="warn">
		<appender-ref ref="general" />
		<appender-ref ref="error" />
	</logger>

	<root value="warn">
		<appender-ref ref="contact" />
		<appender-ref ref="general" />
		<appender-ref ref="error" />
	</root>

</configuration>